<%if check_power('new_inout_bill')%>
  <div class="block">
    <h3>新建</h3>
    <ul class="navigation">
      <li><%= link_to "新建票据", new_inout_bill_path(:active_sub_tab => 7) %></li>
    </ul>
  </div>
<%end%>
<div class="block">
  <h3>操作</h3>
  <ul class="navigation">
    <%if check_power('new_deliver')%>
      <li><%= link_to "提货操作", new_deliver_path,:onclick => "Modalbox.show(this.href,{title : false,width : 700,height : 400});return false" %></li>
    <%end%>
    <%if check_power('new_clear_info')%>
      <li><%= link_to "清仓操作", new_clear_info_path,:onclick => "Modalbox.show(this.href,{title : false,width : 700,height : 400});return false" %></li>
    <%end%>
    <li><%= link_to "导出查询结果", inout_bills_path(:search => params[:search],:format => :csv) %></li>
  </ul>
</div>

<div class="block">
  <h3>查询</h3>
  <div class="content">
    <%=render "shared/bills/search_form",:bill_type => :inout_bill%>
  </div>
</div>

