<div class="block">
  <div class="secondary-navigation">
    <%= render 'shared/messages/caption' %>
  </div>          
  <div class="content">          
    <h2 class="title">通讯录</h2>
    <div class="inner">
      <table class="table">
        <% @address_book_lines.each do |line| -%>
          <tr class='fields'>
            <td>
              <%=line.name%>
            </td>
            <td>
              <%=line.phone%>
            </td>
            <td>
              <%=line.mobile%>
            </td>
            <td>
              <%=line.location%>
            </td>
            <td>
              <%if check_power('edit_address_book')%>
                <%= link_to "修改", edit_address_book_path(line.address_book,:active_sub_tab => 9) %> |
              <%end%>
              &nbsp;&nbsp;
              <%if check_power('destroy_address_book')%>
                <%= link_to "删除", line.address_book, :method => :delete, :confirm => "确定删除吗?" %>
              <%end%>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <%= will_paginate @address_book_lines  %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render("sidebar") -%>
