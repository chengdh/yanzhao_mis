<h1>Editing punishment</h1>

<% form_for(@punishment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :violation %><br />
    <%= f.text_field :violation %>
  </p>
  <p>
    <%= f.label :punish_date %><br />
    <%= f.date_select :punish_date %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :handled %><br />
    <%= f.text_field :handled %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :target_org_id %><br />
    <%= f.text_field :target_org_id %>
  </p>
  <p>
    <%= f.label :target %><br />
    <%= f.text_field :target %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

