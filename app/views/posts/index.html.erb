<div class="block">
  <div class="secondary-navigation">
    <%= render :partial => "caption" %>
  </div>          
  <div class="content">          
    <h2 class="title">收信列表</h2>
    <div class="inner">
      <table class="table">
        <%@posts.each do |post| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td width='180'>
              <span class='ellipsis'> 收件人:<%= post.visitors_list%></span>
            </td>
            <td width='530'>
              <span class='ellipsis' style='width : 530px'><%= link_to post.title, post %></span>
            </td>

            <td width='50'>
              <%= status_time_ago_in_words(post.created_at) %>
            </td>
          </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <%=will_paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
