<fieldset class='blockLabels'>
  <%=f.hidden_field :is_secure,:value => true%>
  <legend>所有项目都为必填项目</legend>
  <%= f.hidden_field :org_id %>
  <% f.fields_for :message_visitors do |mv| %>
    <div class="ctrlHolder">
      <%= mv.label :user_id, "收信人" %>
      <%= mv.select :user_id, select_for_managers %>
    </div>
  <%end%>

  <div class="ctrlHolder">
    <%= f.label :title, "标题" %>
    <%= f.text_field :title, :size => "30",:maxlength => "30",:class => 'textInput title' %>
    <p class="formHint">信息标题,最长30个汉字</p>
  </div>

  <div class="ctrlHolder">
    <%= f.label :body, "正文(最长300个汉字)" %>
    <%= f.tinymce :body %>
  </div>

  <div class="actions-bar">
    <%=f.submit '发送信息', :class => 'sexybutton sexysimple sexyblue'%>
    <%=link_to '取消',:back,:class => 'sexybutton sexysimple sexyred' %>
  </div>
</fieldset>
