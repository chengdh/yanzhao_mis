<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "结算信息列表", settlements_path  %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">结算信息列表</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>月份</th>
          <th>始发货提成</th>
          <th>返程货提成</th>
          <th>合计提成</th>
          <th>应补合计</th>
          <th>应扣合计</th>
          <th>分部实提金额</th>
          <th>&nbsp;</th>
        </tr>
        <% @group_settlements.each do |org,settlements| -%>
          <tr><td colspan='8'><h3><%=org.name%></h3></td></tr>
          <%settlements.each do |settlement|%>
            <tr class="<%= cycle("odd", "even") %>">
              <td><%= settlement.mth %></td>
              <td><%= settlement.start_push_money %></td>
              <td><%= settlement.back_push_money %></td>
              <td><%= settlement.total_push_money %></td>
              <td><%= settlement.total_subsidy %></td>
              <td><%= settlement.total_deduction %></td>
              <td><%= settlement.total_push_money %></td>
              <td class="last">
                <%= link_to "查看/打印", settlement,:popup => ['分部返款结算表','toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=yes']%> |
                <%= link_to "修改", edit_settlement_path(settlement) %> |
                <%= link_to "删除", settlement, :method => :delete, :confirm => "确认要删除吗?" %>
              </td>
            </tr>          
          <%end%>
          <tr>
            <td>小计:</td>
            <td><%= settlements.sum(&:start_push_money) %></td>
            <td><%= settlements.sum(&:back_push_money) %></td>
            <td><%= settlements.sum(&:total_push_money) %></td>
            <td><%= settlements.sum(&:total_subsidy) %></td>
            <td><%= settlements.sum(&:total_deduction) %></td>
            <td><%= settlements.sum(&:total_push_money) %></td>
          </tr>
          <tr>
            <td colspan='8'>&nbsp;</td>
          </tr>
          <tr>
            <td>总计:</td>
            <td><%= @sum_info[:start_push_money]%></td>
            <td><%= @sum_info[:back_push_money] %></td>
            <td><%= @sum_info[:total_push_money] %></td>
            <td><%= @sum_info[:total_subsidy] %></td>
            <td><%= @sum_info[:total_deduction] %></td>
            <td><%= @sum_info[:total_push_money] %></td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <%= will_paginate @settlements  %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
