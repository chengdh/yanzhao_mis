<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "单据列表", self.send("#{@param_name.tableize}_path") %></li>
      <li><%= link_to "新单据", self.send("new_#{@param_name}_path") %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">单据列表</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>单据日期</th>
          <th>仓库</th>
          <th>部门</th>
          <th>经办人</th>
          <th class="last">&nbsp;</th>
        </tr>
        <%bills = instance_variable_get("@#{@param_name.tableize}") %>
        <% bills.each do |bill| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= bill.inout_date %>
            </td>
            <td>
              <%= bill.warehouse.try(:name) %>
            </td>
            <td>
              <%= bill.org.try(:name) %>
            </td>
            <td>
              <%= bill.person_name %>
            </td>
            <td class="last">
              <%= link_to "查看/打印", bill %> 
              <%= link_to "删除", bill, :method => :delete, :confirm => "您确定要删除该信息吗？" %>
            </td>
          </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <%= will_paginate bills  %>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
