<div class="block">
  <div class="secondary-navigation">
    <%= render :partial => 'shared/orgs/caption' %>
  </div>          
  <div class="content">          
    <h2 class="title">信息列表</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first"></th>
          <th>名称</th>
          <th>地址</th>
          <th>联系电话</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% orgs = instance_variable_get("@#{@param_name.tableize}")%>
        <% orgs.each do |org| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td></td>
            <td><%=org.name%></td>
            <td><%=org.address%></td>
            <td><%=org.phone%></td>
            <td class="last">
              <%= link_to "修改", self.send("edit_#{@param_name}_path",org) %> 
            </td>
          </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <%=will_paginate orgs%>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/orgs/sidebar') -%>
