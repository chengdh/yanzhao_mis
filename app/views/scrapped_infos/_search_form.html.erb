<% form_for @search,:url => {:action => :index},:html => {:class => :uniForm } do |f| -%>
  <fieldset class='blockLabels'>
    <%=hidden_field_tag :active_sub_tab,params[:active_sub_tab]%>
    <div class='ctrlHolder'>
      <%=f.label :person_name_like,"经手人"%>
      <%=f.text_field :person_name_like,:class => "textInput" %>
    </div>
    <div class='ctrlHolder'>
      <%=f.label :created_at_gte,"报废日期"%>
      <%=f.calendar_date_select :created_at_gte,:class => "textInput" %>
    </div>
    <div class='ctrlHolder'>
      <%=f.label :created_at_lte,"~"%>
      <%=f.calendar_date_select :created_at_lte,:class => "textInput" %>
    </div>
  </fieldset>
  <div class="actions-bar">
    <%=f.submit '查询', :class => 'sexybutton sexysimple sexyblue'%>
  </div>
<% end -%>
