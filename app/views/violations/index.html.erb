<div class="block">
  <div class="secondary-navigation">
    <%= render :partial => 'caption' %>
  </div>          
  <div class="content">          
    <h2 class="title"><%="违规信息列表"%></h2>
    <div class="inner">
      <table class="table">
        <%@violations.each do |violation| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= status_time_ago_in_words(violation.created_at) %>
            </td>
            <td>
              <%= link_to violation.title, violation,:class => "ellipsis'" %>
            </td>
            <td>
              <%= "#{violation.target_org.try(:name)},#{violation.target}" %>
            </td>
          </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <%=will_paginate @violations %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
